#include <iostream>

double average(int arr[], int size) {
    double sum = 0;
    for (int i = 0; i < size; i++) {
        sum += arr[i];
    }
    return sum / size;
}

int main() {
    int myArray[] = {1, 2, 3, 4, 5};
    int arraySize = sizeof(myArray) / sizeof(myArray[0]);
    double myAverage = average(myArray, arraySize);
    std::cout << "The average is " << myAverage << std::endl;
    return 0;
}
